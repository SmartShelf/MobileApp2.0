<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShelf.EditScalePage"
             Title="Edit Scale">
    <StackLayout Orientation="Vertical" Padding="10,10,10,10">
        <Label Text="Scale Name" FontSize="Small"/>
        <Entry x:Name="scaleName" Text="{Binding Name}" Placeholder="" />

        <Label Text="Select Product By" FontSize="Small"/>
        <Entry x:Name="selectProductBy" Placeholder="" />


    </StackLayout>
</ContentPage>