<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShelf.DashboardPage"
             Title="Dashboard"
             >
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="0,40,0,0" Android="0,0,0,0" />
	</ContentPage.Padding>
    <ScrollView x:Name="scrollView" Orientation="Vertical" Padding="5">
        <ScrollView.Content>
            <StackLayout Orientation="Vertical" x:Name="stackLayout">
            </StackLayout>
        </ScrollView.Content>
    </ScrollView>
</ContentPage>